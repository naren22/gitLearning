<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured" jcr:title="Language Selector"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<tabs jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/tabs">
				<items jcr:primaryType="nt:unstructured">
					<main jcr:primaryType="nt:unstructured"
						jcr:title="Configuration"
						sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
						margin="{Boolean}true">
						<items jcr:primaryType="nt:unstructured">
							<column jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<languageSelectMessage
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
										fieldDescription="This text will be displayed when no selection has occurred"
										fieldLabel="Dropdown Select Message"
										name="./languageSelectMessage" />
									<singleLanguageSelectFooter
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
										fieldDescription="Text for the Select Language Footer - Single Language Asset"
										fieldLabel="Footer - Single Language"
										name="./singleLanguageSelectFooter" />
									<multiLanguageSelectFooter
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
										fieldDescription="Text for the Select Language Footer - Multi Language Asset"
										fieldLabel="Footer - Multi Language"
										name="./multiLanguageSelectFooter" />
								</items>
							</column>
						</items>
					</main>
				</items>
			</tabs>
		</items>
	</content>
</jcr:root>
